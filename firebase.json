{
  "hosting": [
    {
      "target": "website",
      "public": "website/build/yew",
      "i18n": {
        "root": "/docs/"
      },
      "cleanUrls": true,
      "trailingSlash": false,
      "redirects": [
        {
          "source": "/",
          "destination": "/docs/en/intro",
          "type": 301
        },
        {
          "source": "/docs/",
          "destination": "/docs/en/intro",
          "type": 301
        },
        {
          "source": "/docs/next/",
          "destination": "/docs/en/next/intro",
          "type": 301
        },
        {
          "source": "/docs/:lang/",
          "destination": "/docs/:lang/intro",
          "type": 301
        },
        {
          "source": "/docs/:lang/next/",
          "destination": "/docs/:lang/next/intro",
          "type": 301
        },
        // for compatibility
        {
          "source": "/docs/v/zh_cn",
          "destination": "/docs/zh-CN/intro/",
          "type": 301
        },
        {
          "source": "/docs/v/zh_tw",
          "destination": "/docs/zh-TW/intro/",
          "type": 301
        },
        {
          "regex": "/docs/v/zh_cn/(.*)",
          "destination": "/docs/zh-CN/:1",
          "type": 301
        },
        {
          "regex": "/docs/v/zh_tw/(.*)",
          "destination": "/docs/zh-TW/:1",
          "type": 301
        }
      ]
    },
    {
      "target": "examples",
      "public": "dist",
      "rewrites": [
        {
          "source": "/router/**",
          "destination": "/router/index.html"
        },
        {
          "source": "/todomvc/**",
          "destination": "/todomvc/index.html"
        }
      ]
    }
  ]
}