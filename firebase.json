{
  "hosting": [
    {
      "target": "website",
      "public": "website/build/",
      "cleanUrls": true,
      "redirects": []
    },
    {
      "target": "examples",
      "public": "dist",
      "rewrites": [
        {
          "source": "/router/**",
          "destination": "/router/index.html"
        },
        {
          "source": "/todomvc/**",
          "destination": "/todomvc/index.html"
        }
      ]
    }
  ]
}
